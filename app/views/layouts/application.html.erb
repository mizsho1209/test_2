<!DOCTYPE html>
<html>
  <head>
    <title>Workspace</title>
    <%= render 'layouts/head'%>
    <%= render 'layouts/shim'%>
  </head>

  <header>
    <p id="logo"><%= link_to 'RailsCampBlog', root_path %></p>
    <nav>

        <ul>
            <li><%= link_to "トップ", root_path %></li>
            <% if user_signed_in? %>
              <li><%= link_to"新規投稿", new_post_path(:post) %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            <% else%>
              <li><%= link_to"ユーザ登録", new_user_registration_path %></li>
              <li><%= link_to "ログイン", new_user_session_path%></li>
            <% end %>
        </ul>

    </nav>
</header>


  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
